<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SN DEVELOPERS"
        android:textStyle="bold"
        android:textSize="20pt"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="123@gmail.com"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="1234"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/email"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_gravity="center"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        android:background="#007BFF"
        android:layout_below="@id/Password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp">

        <ImageButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_facebook"
            android:background="@drawable/transparent_background"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/google_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_google"
            android:background="@drawable/transparent_background" />  <!-- Google red -->
    </LinearLayout>

    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign Up"
        android:textColor="#007BFF"
        android:layout_below="@id/Login"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center" />

</RelativeLayout>
